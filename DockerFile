FROM python:3.11-slim

# System deps for Chromium
RUN apt-get update && apt-get install -y --no-install-recommends \
    chromium chromium-driver fonts-liberation libnss3 libx11-6 libxkbcommon0 libxcomposite1 \
    libxcursor1 libxi6 libxdamage1 libxrandr2 libgbm1 libgtk-3-0 libasound2 \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ENV PYTHONUNBUFFERED=1
ENV PORT=8080

# Gunicorn = prod web server
CMD ["gunicorn", "app:app", "--bind=0.0.0.0:8080", "--workers=3", "--threads=4", "--timeout=180", "--preload"]